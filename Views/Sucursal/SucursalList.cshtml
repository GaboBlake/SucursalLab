@using SucursalLab.Models
@model List<SucursalModel>

@{
    ViewData["Title"]="Lista de Sucursales";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Empresa</th>
            <th scope="col">Direcci√≥n</th>
            <th scope="col"># de Empleados</th>
            <th scope="col">Presupuesto</th>
            
           
        </thead>
    <tbody>
@foreach (var sucursal in Model)
{

    <tr>
        <td>@sucursal.Id</td>
        <td>@sucursal.Name</td>
        <td>@sucursal.Empresa</td>
        <td>@sucursal.Location</td>
        <td>@sucursal.NumEmpleados</td>
        <td>@sucursal.Presupuesto</td>

        <td>
            <a class="btn btn-outline-info" asp-action="EditSucursal" asp-controller="Sucursal" asp-route-id="@sucursal.Id">Editar</a>
            <a class="btn btn-outline-info" asp-action="DeleteSucursal" asp-controller="Sucursal" asp-route-id="@sucursal.Id">Borrar</a>
        </td>
    </tr>
}
    </tbody>
    <tfoot></tfoot>
</table>

 <a class="btn btn-outline-info" asp-action="AddSucursal" asp-controller="Sucursal">Agregar sucursal</a>
